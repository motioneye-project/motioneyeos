{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile rpi4",
      "type": "shell",
      "command": "${workspaceFolder}/docker-build.sh",
      "args": [
        "raspberrypi4"
      ],
      "group": "build"
    },
    {
      "label": "build rpi4",
      "type": "shell",
      "command": "sudo ${workspaceFolder}/build.sh",
      "args": [
        "raspberrypi4",
        "mkrelease"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": [
        "compile rpi4"
      ]
    }
  ]
}