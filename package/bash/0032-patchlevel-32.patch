  	  interrupt_immediately = 0;
! 	  trap_handler (SIGCHLD);	/* set pending_traps[SIGCHLD] */
  	  wait_signal_received = SIGCHLD;
  	  /* If we're in a signal handler, let CHECK_WAIT_INTR pick it up;
