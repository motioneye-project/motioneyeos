+	  break;
+
 	case OPTION_PUSH_STATE:
 	  input_flags.pushed = xmemdup (&input_flags,
 					sizeof (input_flags),
@@ -1571,6 +1588,10 @@ parse_args (unsigned argc, char **argv)
       command_line.soname = NULL;
     }
 
