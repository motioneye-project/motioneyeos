+++ b/ld/ld.h
@@ -172,6 +172,14 @@ typedef struct {
   /* If set, display the target memory usage (per memory region).  */
   bfd_boolean print_memory_usage;
 
+  /* If TRUE (the default) warn for uses of system directories when
