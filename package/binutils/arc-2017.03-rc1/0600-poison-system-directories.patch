   struct option *longopts;
   struct option *really_longopts;
   int last_optind;
@@ -1528,6 +1537,14 @@ parse_args (unsigned argc, char **argv)
           }
           break;
 
+	case OPTION_NO_POISON_SYSTEM_DIRECTORIES:
