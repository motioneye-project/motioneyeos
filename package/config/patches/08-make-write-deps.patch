+static int write_make_deps(const char *name)
+{
+	char *str;
+	char dir[PATH_MAX+1], buf[PATH_MAX+1], buf2[PATH_MAX+1];
+	struct menu *menu;
+	struct symbol *sym;
+	struct property *prop, *p;
