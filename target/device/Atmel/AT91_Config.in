config	BR2_TARGET_ATMEL_MPB
	bool "With customizable MP-Block"
	depends on BR2_TARGET_AT91
	depends on !BR2_TARGET_ATMEL_ALL

comment "Device Selection"
	depends on BR2_TARGET_AT91

