#!/bin/sh

MODPROBE=/sbin/modprobe

echo -n "Probing modules: "
if [ ! -x "${MODPROBE}" -o ! -f "/etc/modules" ]; then
	echo "missing"
	exit 1
else
	echo
fi

grep '^[^#]' "/etc/modules" | \
while read module args; do
	[ "$module" ] || continue
	if ${MODPROBE} $module $args; then
		echo "  $module loaded"
	else
		echo "  $module failed"
	fi
done
